<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubtaskActivity">
    <TextView
        android:id="@+id/TitleForSubTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <ListView
        android:id="@+id/SubTaskActivityList"
        android:layout_width="match_parent"
        android:layout_marginBottom="100dp"
        android:layout_below="@id/descriptionUnderTitle2"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/EnterNewSubTaskItem"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Input New List Item"
        android:text="" />

    <Button
        android:id="@+id/AddNewSubTaskItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/EnterNewSubTaskItem"
        android:layout_centerHorizontal="true"
        android:text="Add To List" />

    <TextView
        android:id="@+id/descriptionUnderTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TitleForSubTask"
        android:layout_centerHorizontal="true"
        android:text="Description" />
</RelativeLayout>